FROM python:3.11-slim

WORKDIR /app

# 安装依赖
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 复制代码
COPY device_control_pb2.py .
COPY device_control_pb2_grpc.py .
COPY models.py .
COPY grpc_server.py .
COPY rest_api.py .

# 暴露REST API端口
EXPOSE 8080

# 启动FastAPI服务器
CMD ["uvicorn", "rest_api:app", "--host", "0.0.0.0", "--port", "8080"]
