FROM python:3.11-slim

WORKDIR /app

# 安装依赖
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 复制代码
COPY device_control_pb2.py .
COPY device_control_pb2_grpc.py .
COPY models_merged.py .
COPY grpc_server_secured.py .
COPY auth.py .
COPY rest_api_secured.py .

# 暴露REST API端口（使用非常用端口）
EXPOSE 18032

# 启动FastAPI服务器
CMD ["uvicorn", "rest_api_secured:app", "--host", "0.0.0.0", "--port", "18032"]
