FROM python:3.11-slim

WORKDIR /app

# 安装依赖
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 复制代码
COPY device_control_pb2.py .
COPY device_control_pb2_grpc.py .
COPY models_merged.py .
COPY grpc_server_secured.py .

# 创建日志目录
RUN mkdir -p /app/logs

# 暴露gRPC端口（使用非常用端口）
EXPOSE 18033

# 启动gRPC服务器
CMD ["python", "grpc_server_secured.py"]
